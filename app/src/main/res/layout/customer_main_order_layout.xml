<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@mipmap/login_bg"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="29dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="进行中..."
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/merchant_main_order_order"
                android:layout_width="120dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_customer_main_order_comment"
                android:text="水洗x1+洗衣液x1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/base_horization_line" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/tv_customer_main_order_phonenumber"
                    android:layout_weight="1"
                    android:text="15xxxxxxxxx"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/tv_customer_main_order_rate"
                    android:layout_weight="1"
                    android:text="好评率  100%"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_customer_main_order_message"
                android:text="暂无来自商家的消息"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </LinearLayout>
        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@mipmap/base_horization_line" />
        <TextView
            android:id="@+id/tv_customer_main_order_price"
            android:text="5.5"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/base_horization_line" />
    <LinearLayout
        android:id="@+id/ll_customer_main_order_detail"
        android:background="@color/backgroud_gray"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fl_customer_main_order_finish"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/login_blue"
                android:layout_marginLeft="50dp"
                android:layout_width="2dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_customer_main_order_time_finish"
                    android:text="11:55am"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/customer_main_order_time_p"
                    android:layout_marginLeft="35dp"
                    android:layout_width="100dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:background="@drawable/customer_main_order_item_p_bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/pay"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="已完成支付"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="请对商家此次服务做出评价"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_customer_main_order_appraise"
                        android:layout_weight="3"
                        android:text="点击评价"
                        android:gravity="center"
                        android:textColor="@color/login_blue"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_customer_main_order_back"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/login_blue"
                android:layout_marginLeft="50dp"
                android:layout_width="2dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_customer_main_order_time_back"
                    android:text="11:55am"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="@drawable/customer_main_order_time_p"
                    android:layout_marginLeft="35dp"
                    android:layout_width="100dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:background="@drawable/customer_main_order_item_p_bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/footprint"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="衣服已送回"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="请尽快付款"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_customer_main_order_receive"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/login_blue"
                android:layout_marginLeft="50dp"
                android:layout_width="2dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_customer_main_order_time_receive"
                    android:text="11:55am"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="@drawable/customer_main_order_time_p"
                    android:layout_marginLeft="35dp"
                    android:layout_width="100dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:background="@drawable/customer_main_order_item_p_bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/shop"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="商家已接单"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="商家正在准备上门取衣"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fl_customer_main_order_commit"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/login_blue"
                android:layout_marginLeft="50dp"
                android:layout_width="2dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_customer_main_order_time_commit"
                    android:text="11:55am"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@drawable/customer_main_order_time_p"
                    android:layout_marginLeft="35dp"
                    android:layout_width="100dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:background="@drawable/customer_main_order_item_p_bg"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/people"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="订单已提交"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="正在等待商家接单"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
            </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>