<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yitwee.www.aixi.LoginActivity">
    <TextView
        android:background="@color/login_blue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登陆"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/login_input_bg"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/et_login_phonenumber"
            android:hint="@string/login_username_hint"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:inputType="textAutoComplete"
            android:background="@android:color/transparent"
            android:drawableLeft="@mipmap/login_icon_account"
            android:drawablePadding="10dip"
            android:textColorHint="@color/word_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="15dip"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:gravity="center_vertical"
            android:maxLines="1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@mipmap/base_horization_line" />
        <EditText
            android:id="@+id/et_login_password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:drawablePadding="10dip"
            android:drawableLeft="@mipmap/login_icon_password"
            android:background="@android:color/transparent"
            android:hint="请输入登陆密码"
            android:textColorHint="@color/word_gray"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <Button
        android:id="@+id/bt_login_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:layout_gravity="end"
        android:layout_marginRight="30dp"
        android:background="@android:color/transparent"
        android:textColor="@color/word_gray"/>
    <Button
        android:id="@+id/bt_login_login"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="登陆"
        android:background="@color/login_blue"
        />
    <Button
        android:id="@+id/bt_login_newuser"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册新账号 >"
        android:textColor="@color/word_gray"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/yitwee_login_logo" />
</LinearLayout>